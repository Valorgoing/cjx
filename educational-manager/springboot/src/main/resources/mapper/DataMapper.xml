<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DataMapper">

    <sql id="Base_Column_List">
        id,student_id,content,course_id,teacher_id,file,upload_date
    </sql>

    <select id="selectAll" resultType="com.example.entity.Data">
        select data.*, student.name as studentName, teacher.name as teacherName, course.name as courseName
        from data
        left join student on data.student_id = student.id
        left join teacher on data.teacher_id = teacher.id
        left join course on data.course_id = course.id
        <where>
<!--            <if test="id != null"> and id= #{id}</if>-->
            <if test="courseId != null"> and data.course_id = #{courseId}</if>
            <if test="content != null"> and content like concat('%', #{content}, '%')</if>
<!--            <if test="studentId != null"> and student_id = #{studentId}</if>-->
<!--            <if test="teacherId != null"> and data.teacher_id = #{teacherId}</if>-->
        </where>
--         order by id desc
        order by upload_date desc
    </select>

    <select id="selectById" resultType="com.example.entity.Data">
        select
        <include refid="Base_Column_List" />
        from data
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from data
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Data" useGeneratedKeys="true">
        insert into data
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="studentId != null">student_id,</if>
            <if test="content != null">content,</if>
            <if test="courseId != null">course_id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="file != null">file,</if>
            upload_date
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="content != null">#{content},</if>
            <if test="courseId != null">#{courseId},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="file != null">#{file},</if>
            NOW()
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Data">
        update data
        <set>
            <if test="studentId != null">
                student_id = #{studentId},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="courseId != null">
                course_id = #{courseId},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="file != null">
                file = #{file},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>