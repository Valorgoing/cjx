<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TestMapper">

    <sql id="Base_Column_List">
        id,student_id,content,course_id,teacher_id,file,start_date,end_date
    </sql>

    <select id="selectAll" resultType="com.example.entity.Test">
        select test.*, student.name as studentName, teacher.name as teacherName, course.name as courseName
        from test
        left join student on test.student_id = student.id
        left join teacher on test.teacher_id = teacher.id
        left join course on test.course_id = course.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="content != null"> and content like concat('%', #{content}, '%')</if>
            <if test="studentId != null"> and student_id = #{studentId}</if>
            <if test="teacherId != null"> and test.teacher_id = #{teacherId}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Test">
        select
        <include refid="Base_Column_List" />
        from test
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from test
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Test" useGeneratedKeys="true">
        insert into test
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="studentId != null">student_id,</if>
            <if test="content != null">content,</if>
            <if test="courseId != null">course_id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="file != null">file,</if>
            <if test="startDate != null">start_date,</if>
            <if test="endDate != null">end_date,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="content != null">#{content},</if>
            <if test="courseId != null">#{courseId},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="file != null">#{file},</if>
            <if test="startDate != null">#{startDate},</if>
            <if test="endDate != null">#{endDate},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Test">
        update test
        <set>
            <if test="studentId != null">
                student_id = #{studentId},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="courseId != null">
                course_id = #{courseId},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="file != null">
                file = #{file},
            </if>
            <if test="startDate != null">
                start_date = #{startDate},
            </if>
            <if test="endDate != null">
                end_date = #{endDate},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>